<script>



    document.querySelector('.scroll-button.left').addEventListener('click', function() {
            document.querySelector('.projetos').scrollBy({
                left: -400, // Ajuste este valor de acordo com a largura do seu conteúdo
                behavior: 'smooth'
            });
        });
    
        document.querySelector('.scroll-button.right').addEventListener('click', function() {
            document.querySelector('.projetos').scrollBy({
                left: 400, // Ajuste este valor de acordo com a largura do seu conteúdo
                behavior: 'smooth'
            });
        });
    
    
    
        function openModal(itemId) {
    var item = document.getElementById(itemId);
    var backgroundImage = window.getComputedStyle(item, null).getPropertyValue('background-image');
    document.querySelector('.imgmodal').style.backgroundImage = backgroundImage;
    document.getElementById('myModal').style.display = 'block';
}
function closeModal() {
    document.getElementById('myModal').style.display = 'none';
}


document.addEventListener("DOMContentLoaded", function() {
  // Seletor para todos os links com a classe link-scroll
  var links = document.querySelectorAll('.link-scroll');

  // Adiciona um evento de clique a cada link
  links.forEach(function(link) {
    link.addEventListener('click', function(event) {
      event.preventDefault(); // Impede o comportamento padrão do link
      
      // Obtém o alvo do link (o ID do elemento de destino)
      var targetId = this.getAttribute('href');

      // Obtém a posição do elemento de destino
      var targetPosition = document.querySelector(targetId).offsetTop;

      // Animação de rolagem suave
      window.scrollTo({
        top: targetPosition,
        behavior: 'smooth'
      });
    });
  });
});


function openModal(itemId) {
    var item = document.getElementById(itemId);
    var backgroundImage = window.getComputedStyle(item, null).getPropertyValue('background-image');
    var paragrafo = item.querySelector('.conteudo-modal').innerHTML;
    
    document.querySelector('.imgmodal').style.backgroundImage = backgroundImage;
    document.getElementById('paragrafo-modal').innerHTML = paragrafo; // Apenas no modal
    document.getElementById('myModal').style.display = 'block';
}

function closeModal() {
    document.getElementById('myModal').style.display = 'none';
}

            </script>
